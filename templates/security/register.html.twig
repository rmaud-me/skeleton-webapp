{% extends 'layouts/auth.html.twig' %}
{% block title %}Register{% endblock %}

{% block content %}
<h1 class="auth-title">Sign Up</h1>
<p class="auth-subtitle mb-5">Input your data to register to our website.</p>

<form action="{{ path('security_login') }}">
    <div class="form-group position-relative has-icon-left mb-4">
        <label class="d-none" for="register-password"></label>
        <input id="register-password" type="text" class="form-control form-control-xl" placeholder="Email">
        <div class="form-control-icon fs-4">
            <twig:ux:icon name="bi:envelope" height="25px" width="25px"/>
        </div>
    </div>
    <div class="form-group position-relative has-icon-left mb-4">
        <label class="d-none" for="register-username"></label>
        <input id="register-username" type="text" class="form-control form-control-xl" placeholder="Username">
        <div class="form-control-icon fs-4">
            <twig:ux:icon width="30px" height="30px" name="stash:person"/>
        </div>
    </div>
    <div class="form-group position-relative has-icon-left mb-4">
        <label class="d-none" for="register-password"></label>
        <input id="register-password" type="password" class="form-control form-control-xl" placeholder="Password">
        <div class="form-control-icon fs-4">
            <twig:ux:icon width="25px" height="25px" name="bi:shield-lock"/>
        </div>
    </div>
    <div class="form-group position-relative has-icon-left mb-4">
        <label class="d-none" for="register-confirm-password"></label>
        <input id="register-confirm-password" type="password" class="form-control form-control-xl" placeholder="Confirm Password">
        <div class="form-control-icon fs-4">
            <twig:ux:icon width="25px" height="25px" name="bi:shield-lock"/>
        </div>
    </div>
    <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Sign Up</button>
</form>
<div class="text-center mt-5 text-lg fs-4">
    <p class='text-gray-600'>Already have an account? <a href="{{ path('security_login') }}" class="font-bold">Log
            in</a>.</p>
</div>
{% endblock %}
