{% extends 'layouts/auth.html.twig' %}
{% block title %}Login{% endblock %}

{% block content %}
<h1 class="auth-title">Log in.</h1>
<p class="auth-subtitle mb-5">Log in with your data that you entered during registration.</p>

<form action="{{ path('security_login') }}">
    <div class="form-group position-relative has-icon-left mb-4">
        <label class="d-none" for="login-email"></label>
        <input id="login-email" type="text" class="form-control form-control-xl" placeholder="Username">
        <div class="form-control-icon fs-4">
            <twig:ux:icon width="30px" height="30px" name="stash:person"/>
        </div>
    </div>
    <div class="form-group position-relative has-icon-left mb-4">
        <label class="d-none" for="login-password"></label>
        <input id="login-password" type="password" class="form-control form-control-xl" placeholder="Password">
        <div class="form-control-icon fs-4">
            <twig:ux:icon width="25px" height="25px" name="bi:shield-lock"/>
        </div>
    </div>
    <div class="form-check form-check-lg d-flex align-items-end">
        <input class="form-check-input me-2" type="checkbox" value="" id="flexCheckDefault">
        <label class="form-check-label text-gray-600" for="flexCheckDefault">
            Keep me logged in
        </label>
    </div>
    <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Log in</button>
</form>
<div class="text-center mt-5 text-lg fs-4">
    <p class="text-gray-600">Don't have an account? <a href="{{ path('security_register') }}" class="font-bold">Sign
            up</a>.</p>
    <p><a class="font-bold" href="{{ path('security_forgot_password') }}">Forgot password?</a></p>
</div>
{% endblock %}
